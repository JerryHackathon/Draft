$(document).ready(function(){
	var content = $("#groupings")
	content.hide()


	<%def add(a, b)
		a + b
	end%>

	Array.prototype.sample= function(num=1, cut){
    var A= cut? this:this.slice(0);
    A.sort(function(){
        return .5-Math.random();
    });
    return A.splice(0, num);
	}
	

	
	function group_people (stuff, number) {
	 h = []	
	 stuff = stuff.text().split("\n")
	 final = stuff.sample(stuff.length)
	 if ($(".range").val() >= 1){
		for(var count = 1; count <= stuff.length/number; count++) {
		 	h.push( "<h1>"
		 				+"Group " 
		 				+ count
		 				+"</h1>"  
		 				+"<br>"
		 				+ "<h3>" 
		 				+final.splice(0, number) 
		 				+ "</h3>")	
		}
		return h.join("<br>")

		} else {
			h.push("<h2>" + "Please enter a value in the text field" + "</h2>")
			return h.join("<br>")

		}
	}

	$(".group_them").click(function(){
		$(".show").html(group_people(content, $(".range").val()))	
		//$(".show").html("<h3>"+"<%= add(10, 8) %>" + "</h3>")	
	})	
})